<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:stream="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MomeActivity">

    <!-- 左侧区域：运行方向摄像头 -->
    <FrameLayout
        android:id="@+id/leftPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1A1A1A"
        app:layout_constraintBottom_toTopOf="@+id/leftDivider"
        app:layout_constraintEnd_toStartOf="@+id/centerDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/frontCameraContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- 前方摄像头视图 -->
            <com.github.niqdev.mjpeg.MjpegSurfaceView
                android:id="@+id/frontCameraView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rearCameraContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <!-- 后方摄像头视图 -->
            <com.github.niqdev.mjpeg.MjpegSurfaceView
                android:id="@+id/rearCameraView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/leftCameraContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <!-- 左侧摄像头视图 -->
            <com.github.niqdev.mjpeg.MjpegSurfaceView
                android:id="@+id/leftCameraView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rightCameraContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <!-- 右侧摄像头视图 -->
            <com.github.niqdev.mjpeg.MjpegSurfaceView
                android:id="@+id/rightCameraView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible" />

            <com.example.mome.view.AssistLineOverlay
                android:id="@+id/assistLineOverlay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:visibility="gone" />
        </LinearLayout>
        <!-- 辅助线覆盖层 -->


        <!-- 状态指示器 -->
        <TextView
            android:id="@+id/leftStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/status_text_bg"
            android:padding="8dp"
            android:text="前方摄像头"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <FrameLayout
            android:id="@+id/fl_swipe_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/control_panel_bg"
            android:orientation="horizontal"
            android:padding="20dp"
            android:visibility="gone">
            <!-- 滑动方向箭头指示器 -->
            <ImageView
                android:id="@+id/iv_swipe_arrow"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside" />
        </FrameLayout>


    </FrameLayout>

    <!-- 左侧分隔线 -->
    <View
        android:id="@+id/leftDivider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#333333"
        app:layout_constraintBottom_toBottomOf="@id/guideline12"
        app:layout_constraintEnd_toStartOf="@+id/centerDivider" />

    <!-- 车辆控制面板 -->

    <!-- 停止按钮 -->

    <!-- 中央分隔线 -->

    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/control_panel_bg"
        android:orientation="horizontal"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/centerDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leftDivider">


        <!-- 前进按钮 -->
        <ImageButton
            android:id="@+id/btnForward"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginEnd="4dp"
            android:background="@drawable/control_button_bg"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_up" />

        <!-- 后退按钮 -->
        <ImageButton
            android:id="@+id/btnBackward"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/control_button_bg"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_down" />

        <!-- 左转按钮 -->
        <ImageButton
            android:id="@+id/btnLeft"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/control_button_bg"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_left" />

        <!-- 右转按钮 -->
        <ImageButton
            android:id="@+id/btnRight"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/control_button_bg"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_right" />

        <!-- 距离检测控制按钮 -->
        <ImageButton
            android:id="@+id/btnDistanceDetection"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/control_button_bg"
            android:scaleType="centerInside"
            android:src="@drawable/ic_distance_detection" />

    </LinearLayout>

    <View
        android:id="@+id/centerDivider"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#333333"
        app:layout_constraintEnd_toEndOf="@+id/guideline6" />


    <!-- 四个摄像头梯形拼接视图 -->
    <!-- 顶部摄像头 -->
    <ImageView
        android:id="@+id/topTrapezoidView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/centerDivider"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 左侧摄像头 -->
    <ImageView
        android:id="@+id/leftTrapezoidView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toEndOf="@+id/centerDivider"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 右侧摄像头 -->
    <ImageView
        android:id="@+id/rightTrapezoidView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 底部摄像头 -->

    <!-- 连接状态指示器 -->
    <ImageView
        android:id="@+id/bottomTrapezoidView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/centerDivider"
        app:layout_constraintTop_toTopOf="@+id/guideline12"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/connectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="@drawable/status_panel_bg"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/controlPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/leftDivider">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="摄像头状态"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/frontStatus"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/status_indicator_off" />

            <View
                android:id="@+id/rearStatus"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/status_indicator_off" />

            <View
                android:id="@+id/leftStatus"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/status_indicator_off" />

            <View
                android:id="@+id/rightStatus"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/status_indicator_off" />

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6497948" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.78112173" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.867" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.649635" />

    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomTrapezoidView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toEndOf="@+id/centerDivider"
        app:layout_constraintTop_toTopOf="@+id/guideline10"
        app:layout_constraintVertical_bias="0.0"
        stream:srcCompat="@drawable/car" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/controlPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline12" />


    <ImageView
        android:id="@+id/iv_pedal"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:rotationX="8"
        android:transformPivotX="@dimen/cardview_compat_inset_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bottomTrapezoidView"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toEndOf="@+id/controlPanel"
        app:layout_constraintTop_toTopOf="@+id/guideline12"
        app:layout_constraintVertical_bias="0.552"
        stream:srcCompat="@drawable/pedal" />

</androidx.constraintlayout.widget.ConstraintLayout>