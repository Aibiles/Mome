<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FuActivity">

    <SurfaceView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/surface"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_margin="70px"
            android:background="@drawable/back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_alignParentBottom="true"
            android:background="#99666666"
            android:gravity="center_vertical"
            android:paddingTop="40px">

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_marginStart="60px"
                android:background="@drawable/selector_play" />

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50px"
                android:text="快退"
                android:textColor="@color/white"
                android:textSize="44px" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50px"
                android:text="快进"
                android:textColor="@color/white"
                android:textSize="44px" />

            <TextView
                android:id="@+id/tv_played"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50px"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="44px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="44px" />

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="44px" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70px"
            android:maxHeight="10px"
            android:minHeight="10px"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@drawable/sound_thumb"
            android:thumbOffset="0px" />

        <RelativeLayout
            android:id="@+id/rl_other"
            android:layout_width="300px"
            android:layout_height="950px"
            android:layout_alignParentEnd="true"
            android:background="@drawable/other_list_bg"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30px" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_other"
            android:layout_width="200px"
            android:layout_height="70px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="60px"
            android:gravity="center"
            android:text="其他视频"
            android:textColor="@color/white"
            android:textSize="44px" />

    </RelativeLayout>

</RelativeLayout>